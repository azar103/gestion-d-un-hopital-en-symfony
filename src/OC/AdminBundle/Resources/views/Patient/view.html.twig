{% block oc_body_content %}
    <div class="container-fluid" style="background-color:red;color:white;">
  <h2>

    Patient List
  </h2>  
</div>
<br/>
  <a href="{{path('oc_admin_patient_add')}}" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Add new Record</a>
 
<div class="table-responsive">          
  <table class="table">
