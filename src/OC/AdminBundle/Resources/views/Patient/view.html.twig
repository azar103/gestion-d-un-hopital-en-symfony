        <th>Patient Name</th>
        <th>Address</th>
        <th>sex</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
      {% for patient in listPatients %}
      <tr>
        <td>{{ patient.id }}</td>
        <td>{{ patient.name}}</td>
        <td>{{ patient.address }}</td>
        <th>{{ patient.sex }}</th>
        <td><a href="{{path('oc_admin_patient_edit', {'id':  patient.id})}}" class="btn btn-default"><i class="glyphicon glyphicon-edit"></i> Modify</a> 
        <a href="{{path('oc_admin_patient_delete', {'id': patient.id})}}" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i> Delete</a> </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
  </div> 
